<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTrackerApp"
        tools:targetApi="31">

        <!-- ✅ WelcomeActivity is now the Launcher Activity -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ExpenseTrackerApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ MainActivity (launched after Welcome) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ExpenseTrackerApp" />

        <!-- ✅ LoginActivity -->
        <activity
            android:name="com.example.expensetrackerapp.LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.ExpenseTrackerApp" />

        <!-- ✅ SignupActivity -->
        <activity
            android:name="com.example.expensetrackerapp.SignupActivity"
            android:exported="true"
            android:label="Sign Up"
            android:theme="@style/Theme.ExpenseTrackerApp" />

        <!-- ✅ AddExpenseActivity -->
        <activity android:name=".AddExpenseActivity" />

        <activity android:name="com.example.expensetrackerapp.DashboardActivity" />
        <!-- ✅ ViewExpensesActivity -->
        <activity android:name=".ViewExpensesActivity" />
        <activity android:name=".UserProfileActivity" />
    </application>
</manifest>